<h1>Book Show</h1>
<p>
  <%= @book.title %>
</p>
<p>
  A Book By: <%= @book.author.name %>
</p>
<section>
<h3>Description</h3>
<p>
  <%= @book.description %>
</p>
</section>
<section>
  <h3>Genres</h3>
  <ul>
    <% @book.genres.each do |genre| %>
      <li>
        <%= genre.name %>
      </li>
    <% end %>
  </ul>
</section>
<%= link_to "Edit", edit_book_path(@book.id) %>
<%= link_to "Delete", book_path(@book.id),
    data: { confirm: "Are you sure you want to delete this book?" },
    method: :delete
%>

<h2> <%= link_to "Home", books_path %> </h2>
