<ul>
  <% @book.errors.each do |field, msg| %>
    <li>
      <%= field %> <%= msg %>
    </li>
    <% end %>
</ul>

<%= form_for @book do |f| %>

  <%= f.label :title, class: "title" %>
  <%= f.text_field :title %>
  <%= f.label :isbn, class: "isbn" %>
  <%= f.text_field :isbn %>

  <%= f.label :author %>
  <%= f.select :author_id, Author.all.map { |author| [author.name, author.id] } %>

  <%= f.label :description %>
  <%= f.text_area :description, size: "60x12" %>

  <%= f.submit %>
<% end %>
